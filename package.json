{
  "name": "vaccination-automation",
  "version": "1.0.0",
  "description": "AutoHotkey Script Runner for Vaccination Forms",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run clean && electron-builder",
    "build-win": "npm run clean && electron-builder --win",
    "build-portable": "npm run clean && electron-builder --win portable",
    "dist": "npm run build",
    "clean": "node -e \"const fs=require('fs');if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true,force:true});console.log('ðŸ§¹ Cleaned dist directory')\""
  },
  "build": {
    "appId": "com.smartelds.vaccination-automation",
    "productName": "Vaccination Automation",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "files": [
      "**/*",
      "!dist",
      "!scripts/**/*",
      "!build",
      "!node_modules/7zip-bin/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "node-powershell": "^4.0.0"
  },
  "author": "Your Name",
  "license": "MIT"
}
